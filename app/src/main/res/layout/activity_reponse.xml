<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A264A"
    tools:context=".BuzzerActivity">

    <View
        android:id="@+id/view"
        android:layout_width="499dp"
        android:layout_height="807dp"
        android:background="@drawable/background_color"
        android:backgroundTint="#9C27B0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buzjaunem"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FFEB3B"
                android:onClick="moins"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/scorejaune"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FFEB3B"
                android:text="0"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzjaunep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FFEB3B"
                android:onClick="plus"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzbleum"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#00D9FF"
                android:onClick="moins"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/scorebleu"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#00D9FF"
                android:text="0"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzbleup"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#00D9FF"
                android:onClick="plus"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buzrougem"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FF0000"
                android:onClick="moins"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/scorerouge"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FF0000"
                android:text="0"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzrougep"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#FF0000"
                android:onClick="plus"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzvertm"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#85F404"
                android:onClick="moins"
                android:text="-"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/scorevert"
                android:layout_width="140dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#85F404"
                android:text="0"
                android:textColor="#000000"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buzvertp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="0.5"
                android:backgroundTint="#85F404"
                android:onClick="plus"
                android:text="+"
                android:textColor="#000000"
                android:textSize="36sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="84dp"
        android:text="La réponse était:"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reponse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/continuebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:onClick="continuer"
        android:text="Continuer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reponse" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="24dp"
        android:onClick="accueil"
        android:text="Accueil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/affmanche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>